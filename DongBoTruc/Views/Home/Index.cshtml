
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>

    <title>Index</title>
</head>
<body>
    <div class="container-fluid">
        <h1 class="display-4 my-4 text-info">List of users</h1>
        <table class="table table-striped" id="users" style="width: 100%;">
            <thead>
                <tr id="list-header">
                    <th scope="col"></th>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" id="btnSyncData" onclick="syncDatabase()">Sync data</button>
    </div>

    <script type="text/javascript">

        var table;
        var urlUsers = "https://jsonplaceholder.typicode.com/users";
        function initTableData() {
               $.ajax({
                url: '/Home/GetAll',
                type: "GET",
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    table = $('#users').DataTable({
                        "processing": true,
                        data: data,
                        columns: [
                            {
                                data: null,
                                'render': function () {
                                    return '<input type="checkbox" onclick=getChecked()>';
                                }
                            },
                            { data: 'OrganId' },
                            { data: 'OrganName' },
                            { data: 'Email' },
                            { data: 'Telephone' },
                            { data: 'Fax' }
                        ]
                    });
                },
                error: function (xhr) {
                    alert('error');
                }
               });

          
        }

        function getChecked(e) {
            return event.target.checked;
        }

        function getArrayChecked() {
            var array =[];
            $('#users tbody').on('click', 'tr', function () {
                if (getChecked() == true) {
                    array.push(table.row(this).data());
                }
                else {
                    array = array.filter(x => x != table.row(this).data())
                }
                console.log(array);
            });
        }

        function syncDatabase(array) {
            var listChecked = array;
            $.ajax({
                async: false,
                url: '/Home/SyncDatabase',
                type: "POST",
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                data: array,
                success: function (result) {
                    alert('ok');
                },
                error: function (xhr) {
                    alert('error');
                }
            });
        }

        $(document).ready(function () {
            initTableData();
            $("#list-header").on({
                mouseenter: function () {
                    $(this).css("background-color", "lightgray");
                },
                mouseleave: function () {
                    $(this).css("background-color", "lightblue");
                },
            });

            var array =[];
            $('#users tbody').on('click', 'tr', function () {
                if (getChecked() == true) {
                    array.push(table.row(this).data());
                }
                else {
                    array = array.filter(x => x != table.row(this).data())
                }
                console.log(array);
            });

            syncDatabase(array);
        });





    </script>
</body>
</html>
